        </form>


    </div>
    <script>
        var strength = {
            0: "Worst â˜¹",
            1: "Bad â˜¹",
            2: "Weak â˜¹",
            3: "Good â˜º",
            4: "Strong â˜»"
        }

        let now

        var password = document.getElementById('password');
        var repeatpassword = document.getElementById('repeatpassword');
        var meter = document.getElementById('meter');
        var text = document.getElementById('text');

        repeatpassword.addEventListener('input', function () {
            if (repeatpassword.value == password.value) {
                if (now > 2) {
                    document.getElementById('submitit').style.display = "block";
                    document.getElementById('passdialog').style.display = "none";
                } else {
                    document.getElementById('submitit').style.display = "none";
                    document.getElementById('passdialog').style.display = "block";
                    document.getElementById('passdialog').innerText = "WÃ¤hle ein sicheres Passwort um fortzufahren";
                }
            } else {
                document.getElementById('submitit').style.display = "none";
                document.getElementById('passdialog').style.display = "block";
                document.getElementById('passdialog').innerText = "Die PasswÃ¶rter stimmen nicht Ã¼berein";
            }
        });

        password.addEventListener('input', function () {
            var val = password.value;
            var result = zxcvbn(val);

            // Update the password strength meter
            meter.value = result.score;
            now = result.score;


            // Update the text indicator
            if (val !== "") {
                text.innerHTML = "Strength: " + "<strong>" + strength[result.score] + " </strong>" + "<span class='feedback'>" + result.feedback.warning + " " + result.feedback.suggestions + "</span>";
            }
            else {
                text.innerHTML = "";
            }
        });
    </script>
