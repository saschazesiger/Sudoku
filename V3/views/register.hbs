            <div class="form-group">
                <input type="text" id="name" placeholder="Name" class="input" name="name" required>
            </div>
            <div class="form-group">
                <input type="email" id="username" placeholder="Email" class="input" name="username" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" placeholder="Passwort" class="input" name="password" required>
                <div style="max-width: 300px;"><b id="meter"> </b><br>
                    <p id="text"> </p>
                </div>
            </div>
            <div class="form-group">
                <input type="password" id="repeatpassword" placeholder="Passwort wiederholen" class="input"
                    name="repeatpassword" required>
            </div>

            <button class="g-recaptcha b-start" id="submitit" data-sitekey="6LePhWEmAAAAAF9GAaT6JxXBLamGDmlRCyLP8GFm"
